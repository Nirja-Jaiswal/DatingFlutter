<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".ProfileDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Details"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill up the folling details"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_gravity="center"/>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/edtmail"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter here"
                android:textSize="16dp"
                android:padding="10dp"
                android:background="@drawable/bbackwhite"/>


            <EditText
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:textSize="16dp"
                android:padding="10dp"
                android:background="@drawable/bbackwhite"/>
            <EditText
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:textSize="16dp"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_baseline_access_time_24"
                android:background="@drawable/bbackwhite"/>
            <EditText
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:textSize="16dp"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
                android:background="@drawable/bbackwhite"/>





            <TextView
                android:id="@+id/txt_resend"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="30dp"
                android:text="Continue"
                android:layout_gravity="center"
                android:background="@drawable/btn_gradient"
                android:layout_width="200dp"
                android:layout_height="50dp"/>





</LinearLayout>
    </RelativeLayout>

</LinearLayout>